    <script>
      function count(){
        var age = parseInt(document.getElementById("age").value);
        var height = parseFloat(document.getElementById("height").value);
        var weight = parseFloat(document.getElementById("weight").value);
        var genderSelect = document.getElementById("gender").value;
        switch(genderSelect)
        {
          case "male": 
            answer = 10 * weight + 6.25 * height - 5 * age + 5;
            break;
          case "female": 
            answer = 10 * weight + 6.25 * height - 5 * age - 161;
            break;
        }
        document.getElementById("result").value = answer;
      }

      function BMI(){
        var age = parseInt(document.getElementById("age").value);
        var height = parseFloat(document.getElementById("height").value);
        var weight = parseFloat(document.getElementById("weight").value);
        var genderSelect = document.getElementById("gender").value;
        BMIanswer =  (weight / height / height *10000).toFixed(1);
       
        document.getElementById("BMIresult").value = BMIanswer;
      }


    </script>
