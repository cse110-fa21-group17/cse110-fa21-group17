<body>
    <header>
      <%- include('../components/navbar.ejs', {uid})%>
    </header>

    <main>
        <!-- Name of the recipe goes here -->
        <h1 class="header-title"><%=recipe.title%></h1>


        <div class="grid-container">


            <div class="item1">
              <div class="recipeCard2">
                <img
                  src="<%=recipe.image%>"
                  class="cardImage2"
                />
              </div>
            </div>





            <div class="ing">
                <h1>Ingredients</h1>
                <p class="p_with_new_line"><%=recipe.ingredients%></p>
            </div>
            <div class="steps">
                <h1>Steps</h1>
                <p class="p_with_new_line">
                    <%=recipe.instruction%>
            </div>
            <div class="nut">
                <h1>Nutrition Facts</h1>
                <p class="p_with_new_line">

                   <%=recipe.fat%> Total Fat, <%=recipe.protein%> Protein, <%=recipe.carbs%> Total Carbohydrate
            </div>
            <span id="totalTime" style="display: none;"><%=recipe.ready_in_minutes%></span>

            <div class="timer">
            </div>


            <!-- <h1>Timer</h1>
                <p class="p_with_new_line">

                    1Hour 20 Minutes -->
