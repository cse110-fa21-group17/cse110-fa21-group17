<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <!--Bootstrap CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
    <!--bootstrap icons-->

    <link rel="stylesheet" href="/stylesheets/calorie_tracking.css">

    <script src="/javascripts/add_button.js" type="module"></script>
<!--    <script src="/javascripts/piechart.js" type="module"></script>-->
    <script type="module">
        var myConfig = {
            type: "ring",
            plot: {
                // "slice": 90,
                "value-box": {
                    text: "%t %node-valueg"
                },
                animation: {
                    effect: 2,
                    method: 5,
                    speed: 900,
                    sequence: 1
                }
            },
            series: [{
                text: "Carbohydrates",
                backgroundColor: '#708090',
                values: [0]
            },
                {
                    text: "Fats",
                    backgroundColor: '#d32a00',
                    "font-color": '#ffffff',
                    values: [0]
                },
                {
                    text: "Protein",
                    backgroundColor: '#ff8026',
                    values: [0]
                },
            ]
        };
        <%recipes.map((recipe, index) => {%>
            document.getElementById('add<%=index%>').addEventListener('click', function(){
                if(document.getElementById('add<%=index%>').innerText === 'Added') {
                    modifyObj(<%= recipe.carbs %>, <%= recipe.fat %>, <%= recipe.protein %>, true);
                } else {
                    modifyObj(<%= recipe.carbs %>, <%= recipe.fat %>, <%= recipe.protein %>, false);
                }
            });
        <%});%>

        function modifyObj(carbs, fats, protein, add){
            if(add) {
                myConfig.series[0].values[0] += carbs;
                myConfig.series[1].values[0] += fats;
                myConfig.series[2].values[0] += protein;
            } else {
                myConfig.series[0].values[0] -= carbs;
                myConfig.series[1].values[0] -= fats;
                myConfig.series[2].values[0] -= protein;
            }
            zingchart.render({
                id: 'piechart',
                data: myConfig,
                height: 700,
                width: "100%"
            });
        }

        zingchart.render({
            id: 'piechart',
            data: myConfig,
            height: 700,
            width: "100%"
        });

    </script>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous">
    </script>
    <script src="https://cdn.zingchart.com/zingchart.min.js"></script>

</head>

<body>
