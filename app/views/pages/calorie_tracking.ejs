<main>

    <div class="grid-container">
        <div id='piechart'>
            <h1>Calories Tracking Tool</h1>
        </div>
        <div class="cards">
            <h1>From My Saved Recipes</h1>
            <div class="flex-container">
                <!--flex container start div-->
                <%recipes.map((recipe, index) => {%>
                <a href="/recipe_page/<%=recipe.id%>/<%=recipe.rid?'true':'false'%>">
                    <!--Insert link to recipe page-->
                    <div class="recipeCard">
                        <div class="bookmark-icon">
                            <!--TODO: Replace with some kind of unique identifier for the bookmark in each card-->
                            <i class="bi bi-bookmark" id="someIdFromDatabase" style="font-size: 2em;"></i>
                        </div>
                        <div class="cardText">
                            <p class="recipeTitle"><%=recipe.title%></p>
<!--                            <p class="card-tags">Easy To Make | Snack Time</p>-->
                            <p class="card-details"><%=recipe.rid?recipe.ready_in_minutes:recipe.readyInMinutes%> Mins</p>
                            <a class="add_btn" id="add<%=index%>">Add</a>
                        </div>
                        <img src="<%=recipe.image%>"
                             class="cardImage">
                    </div>
                </a>
                <%});%>

            </div>
            <!--flex container end div-->
        </div>

    </div>

    <p>Total calories for this recipe: (fats * 9) + (protein * 4) + (carbs * 4)</p>

</main>
